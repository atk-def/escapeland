---
import type { HTMLAttributes } from 'astro/types'
import clsx from 'clsx'

export interface Props extends HTMLAttributes<'div'> {}

const { class: className, ...rest } = Astro.props
---

<astro-overlay
  class={clsx(
    'invisible opacity-0 sm:hidden fixed top-0 left-0 w-full min-h-screen h-[100dvh] bg-accent-overlay-gradient transition-all duration-300',
    className,
  )}
  {...rest}
>
  <slot />
</astro-overlay>

<script>
  import { $isMobileNavOpen } from '~/store/ui'
  import { twMerge } from 'tailwind-merge'

  class AstroOverlay extends HTMLElement {
    constructor() {
      super()
      $isMobileNavOpen.subscribe((isOpen) => {
        this.className = twMerge(
          this.className,
          isOpen && 'visible opacity-100',
          !isOpen && 'invisible opacity-0',
        )
      })
    }
  }

  customElements.define('astro-overlay', AstroOverlay)
</script>

---
import PageLayout from '~/layouts/PageLayout.astro'
import '@fontsource/bungee-shade'
import PortableText from '~/components/common/portable-text/PortableText.astro'
import { $profile } from '~/store/profile'

const profile = $profile.get()
const { body, name } = profile.data
---

<PageLayout title={'⭐️'}>
  <h1 class="mt-1 mb-10 font-bungee-shade text-3xl">{name}'s Escapeland</h1>
  <div class="max-w-[37.5rem]">
    <!-- @ts-ignore -->
    <PortableText class="text-sm" value={body} />
  </div>
</PageLayout>

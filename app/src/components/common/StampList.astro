---
import clsx from 'clsx'
import StampItem from './StampItem.astro'
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'div'> {
  stamps: {
    title: string
    imageUrl: string
  }[]
}

const { stamps, class: className, ...rest } = Astro.props
---

<div
  class={clsx(
    'flex gap-4 overflow-x-scroll hidden-scrollbar flex-nowrap',
    className,
  )}
  {...rest}
>
  {
    stamps?.map((stamp) => {
      return <StampItem stamp={stamp} />
    })
  }
</div>

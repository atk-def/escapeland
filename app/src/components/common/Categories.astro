---
import type { HTMLAttributes } from 'astro/types'
import Category from './Category.astro'
import clsx from 'clsx'
import type { Category as ICategory } from '~/sanity/schemas/category'

interface Props extends HTMLAttributes<'aside'> {
  categories: ICategory[] | null
}

const { class: className, categories, ...rest } = Astro.props
---

{
  categories && (
    <aside class={clsx('flex gap-2', className)} {...rest}>
      {categories.map((category) => {
        return <Category category={category} />
      })}
    </aside>
  )
}

---
import type { SanityAsset } from '@sanity/image-url/lib/types/types'
import Zoomable from '../Zoomable.astro'
import SanityPicture from '../SanityPicture.astro'

interface Props {
  node: {
    asset: SanityAsset
    alt?: string | null
  }
  class?: string | undefined | null
}

const { node, class: className } = Astro.props
---

<Zoomable>
  <SanityPicture class={className} data-zoomable {...node} />
</Zoomable>
